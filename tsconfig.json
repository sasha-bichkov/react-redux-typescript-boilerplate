{
  "compilerOptions": {
    "strict": true,
    "declaration": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./app",
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "noEmitOnError": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./@types/"
    ],
    "paths": {
      "*": ["./@types/*"],
      "@Root/*": ["./*"],
      "@Utils/*": ["./utils/*"],
      "@Pages/*": ["./pages/*"],
      "@Modules/*": ["./modules/*"],
      "@Containers/*": ["./containers/*"],
      "@Components/*": ["./components/*"],
    },
  },
  "include": [
    "./app/**/*"
  ],
  "exclude": [
    "public",
    "build",
    "node_modules",
    "./app/**/*.spec.ts",
    "./app/**/*.spec.tsx",
    "./app/**/*.spec.js",
    "./app/**/*.spec.jsx"
  ],
  "compileOnSave": false
}
