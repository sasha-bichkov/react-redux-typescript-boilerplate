    "react-focus-lock": "^2.7.1",
    "react-hook-form": "^7.22.5",
    "react-redux": "^7.2.6",
    "react-router": "^5.2.1",
    "redux": "^4.1.2",
    "redux-saga": "^1.1.3",
    "reselect": "^4.1.5",
    "sass-mq": "^5.0.1",
    "web-vitals": "^2.1.2"
  }
}
