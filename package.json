{
  "name": "frontend_boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "test": "yarn jest ./app --verbose --coverage",
    "lint": "yarn eslint ./app",
    "csslint": "yarn stylelint \"./app/**/*.scss\"",
    "cssfix": "yarn stylelint --fix \"./app/**/*.scss\"",
    "dev": "NODE_ENV=development yarn webpack serve --config webpack/development.js",
    "build": "NODE_ENV=production yarn webpack --config webpack/production.js",
    "vendor": "yarn webpack --config webpack/vendor.js",
    "prod_stats": "yarn webpack --config webpack/production.js --profile --json=stats.json",
    "analyze_bundle": "yarn webpack-bundle-analyzer stats.json"
  },
  "size-limit": [
    {
      "path": "build/*.js",
      "limit": "500 kB",
      "gzip": true
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@size-limit/preset-app": "^7.0.4",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.7",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "autoprefixer": "^10.4.0",
    "babel-jest": "^27.4.4",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^10.0.0",
    "critical-css-webpack-plugin": "^3.0.0",
    "css-loader": "^6.5.1",
    "eslint": "^8.3.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.3.1",
    "jest-transformer-svg": "^1.0.2",
    "mini-css-extract-plugin": "^2.4.5",
    "postcss-loader": "^6.2.1",
    "react-svg-loader": "^3.0.3",
    "redux-logger": "^3.0.6",
    "sass": "^1.44.0",
    "sass-loader": "^12.3.0",
    "sass-resources-loader": "^2.2.4",
    "size-limit": "^7.0.4",
    "speed-measure-webpack-plugin": "^1.5.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.1.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-order": "^5.0.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.64.4",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.2",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-router": "^5.1.17",
    "axios": "^0.24.0",
    "classnames": "^2.3.1",
